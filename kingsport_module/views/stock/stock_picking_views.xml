<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="stock_picking_view_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <header position="before">
                <div style="text-align: center;padding: 5px;background: space;color: red;font-weight: bold;font-size: 15px;" attrs="{'invisible': [('return_do_over_7days', '!=', True)]}">
                    <p>Orders changed / paid more than 7 days, the information the approver needs to be provided</p>
                </div>
            </header>
            <field name="origin" position="after">
                <field name="return_do_over_7days"/>
                <field name="approver_id"/>
            </field>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="warranty_expiration_date"/>
            </xpath>
        </field>
    </record>
</odoo>
